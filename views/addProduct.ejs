<%- include('header', {title:"Add product"}) -%>
    <h2>Add Product</h2>
    <form method="POST">
        <div class="form-group row mb-3">
            <label class="col-2" for="name">Product Name</label>
            <input type="text" class="form-control col-4" id="name" name="name" placeholder="Name" />
        </div>

        <div class=" form-group row mb-3">
            <label class="col-2" for="minValidResult">Minimum valid result value</label>
            <input type="number" class="form-control col-4" id="minValidResult" name="minValidResult" placeholder="Minimum valid result value" />
        </div>

        <div class="form-group row mb-3">
            <label class="col-2" for="maxValidResult">Maximum valid result value</label>
            <input type="number" class="form-control col-4" id="maxValidResult" name="maxValidResult" placeholder="Maximum valid result value" />
        </div>

        <div class="row col-4  d-flex justify-content-between">
            <button type="submit" class="btn btn-primary col-2">Save</button>
            <a href="/products" class="col-2 mr-2"><button type="button" class="btn btn-danger">Cancel</button></a>
        </div>
    </form>
    <%- include('footer') -%>