<%- include('header', {title:"Products"}) -%>
    <h2>Products</h2>
    <div class="row mb-2">

        <input type="text" class="form-control col-3 ml-3" placeholder="Name" />
    </div>
    <div class="row mb-2 justify-content-between">
        <button class="ml-3">Search</button>
        <a href="/product/add"><button class="mr-3">+</button></a>
    </div>
    <div class="row">
        <div class="col-12">
            <table class="table table-striped table-bordered">
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Minimum valid result value
                    </th>
                    <th>
                        Maximum valid result value
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
                <% products.forEach(function(p) { %>
                    <tr>
                        <td>
                            <%= p.name %>
                        </td>
                        <td>
                            <%= p.minValidResult %>
                        </td>
                        <td>
                            <%= p.maxValidResult %>
                        </td>
                        <td>
                            <div class="d-flex justify-content-between">
                                <a href="/product/<%=p.id%>"><button>edit</button></a>
                                <button>delete</button>
                            </div>
                        </td>
                    </tr>
                    <% }) %>
            </table>
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item"><a class="page-link" href="?page=1">First</a></li>
                <li class="page-item"><a class="page-link" href="?page=<%=currentPage-1%>">Previous</a></li>
                <% for(let i=1; i <=totalPages; i++) { %>
                    <li class="page-item"><a class="page-link" href="?page=<%=i%>">
                            <%=i%>
                        </a></li>
                    <% } %>
                        <li class="page-item "><a class="page-link" href="?page=<%=currentPage+1%>">Next</a></li>
                        <li class="page-item"><a class="page-link" href="?page=<%=totalPages%>">Last</a></li>
            </ul>
        </nav>
    </div>
    <%- include('footer') -%>