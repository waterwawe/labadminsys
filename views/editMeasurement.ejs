<%- include('header', {title:"Edit measurement"}) -%>
    <h2>Edit Measurement</h2>
    <form method="POST">
        <div class="form-group row mb-3">
            <label class="col-2" for="sample">Sample number</label>
            <input type="text" class="form-control col-4" id="sample" name="sample" placeholder="Sample Number"
                value="<%measurement.sample%>" />
        </div>

        <div class="form-group row mb-3">
            <label class="col-2" for="result">Result</label>
            <input type="number" class="form-control col-4" id="result" name="result" placeholder="Result" value="<%measurement.result%>" />
        </div>

        <div class="form-group row d-flex justify-content-start mb-3" >
            <label class="col-2" for="productid">Product</label>
            <select class="form-control col-4" id="productid" name="productid">
                <% products.forEach(function(p) { %>
                    <option value="<%=p.id%>">
                        <%=p.name%>
                    </option>
                    <% }) %>
            </select>
        </div>

        <div class="form-group row d-flex justify-content-start mb-3">
            <label class="col-2" for="operator">Operator</label>
            <input type="text" placeholder="Operator" class="form-control col-4" value="<%measurement.operator%>" id="operator" name="operator"/>
        </div>

        <div class="row col-5  d-flex justify-content-between">
            <button type="submit" class="btn btn-primary col-2 ml-4">Save</button>
            <a href="/" class="col-2 ml-4"><button type="button" class="btn btn-danger">Cancel</button></a>
        </div>
    </form>
    <%- include('footer') -%>